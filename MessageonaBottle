#include <stdio.h>

int main() {
    FILE *text;
    text = fopen("weihnachten.txt", "rb");
    if (text == NULL) {
        printf("Falsche Eingabe");
    }
    int binchar[8] = {0};
    int output = 0;
    int input;
    int n = 0;
    while (1) {

        input = fgetc(text);
        if (!(input == 49 || input == 48 || input == 32 || input == 10 || input == EOF)) {
            break;
        }

        if (!(input == 32 || input == 13 || input == 10)) {
            binchar[n] = input - 48;
            n++;
        }
        if (n == 8) {
            n = 128;
            for (int i = 0; i < 8; i++) {
                output += binchar[i] * n;
                n = n / 2;
            }
            printf("%c", output);
            output = 0;
            n = 0;
        }
        if (input == EOF) {
            printf("\nPress Button to Exit");
            scanf("%d", &output);
            break;
        }
    }
}
